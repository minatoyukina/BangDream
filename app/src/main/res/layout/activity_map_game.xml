<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:context=".map.MapGame">

    <Button
            android:id="@+id/guess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next_map"/>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/please_select"/>

    <Spinner
            android:id="@+id/song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/map_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    <TextView
            android:id="@+id/map_count"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <!--<Button-->
        <!--android:id="@+id/pre"-->
        <!--android:layout_width="48dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:background="@drawable/icons8_back_arrow_48"-->
        <!--android:text="@string/pre_5s"-->
        <!--android:layout_centerVertical="true"/>-->

        <LinearLayout
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:layout_centerVertical="true">
            <Button
                    android:id="@+id/pre"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icons8_back_arrow_48"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/pre_5s"/>
        </LinearLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map_bar"
                android:layout_centerInParent="true"
                android:contentDescription="@null"/>

        <!--<Button-->
        <!--android:id="@+id/next"-->
        <!--android:layout_width="48dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:background="@drawable/icons8_forward_button_48"-->
        <!--android:text="@string/next_5s"-->
        <!--android:layout_centerVertical="true"/>-->

        <LinearLayout
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_centerVertical="true">
            <Button
                    android:id="@+id/next"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icons8_forward_button_48"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/next_5s"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>